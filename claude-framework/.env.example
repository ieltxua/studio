# CLAUDE Framework Environment Variables

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Slack Integration  
SLACK_TOKEN=your_slack_token_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Security Scanning
SONAR_TOKEN=your_sonar_token_here
SNYK_TOKEN=your_snyk_token_here

# AI Services (for advanced features)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://claude:claude@postgres:5432/claude_framework
REDIS_URL=redis://redis:6379
CHROMADB_URL=http://chromadb:8000

# Framework Configuration
CLAUDE_FRAMEWORK_MODE=development
CLAUDE_PROJECT_ROOT=/workspace
CLAUDE_CONTEXT_PATH=/workspace/.claude
CLAUDE_MCP_DATA_PATH=/usr/local/mcp-data

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
CLAUDE_FRAMEWORK_SECRET=your_framework_secret_here
JWT_SECRET=your_jwt_secret_here

# Performance
MAX_CONCURRENT_TASKS=5
CONTEXT_CACHE_TTL=3600
MCP_REQUEST_TIMEOUT=30